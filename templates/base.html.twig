{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Fotomascotas - Sistema Administrador{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background: linear-gradient(135deg, #d80cceff, #ecd5ecff);
                color: white;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                margin: 0;
                padding: 0;
            }
            .navbar {
                background: #9c27b0 !important;
                border-bottom: 2px solid #ebb0faff;
            }
            .navbar-brand, .nav-link {
                color: white !important;
                font-weight: bold;
            }
            .footer {
                background: #9c27b0;
                color: white;
                text-align: center;
                padding: 1rem;
                position: fixed;
                bottom: 0;
                width: 100%;
                border-top: 2px solid #f031e0ff;
            }
            .container {
                margin-top: 3rem;
                padding: 2rem;
                background: rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(10px);
                border-radius: 15px;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
                min-height: calc(100vh - 150px);
                margin-bottom: 70px;
            }
            h1, h2 {
                color: #fff;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            }
            .form-control {
                background: rgba(255, 255, 255, 0.9);
                border: 2px solid #e261eeff;
                border-radius: 10px;
                color: #333;
            }
            .form-control:focus {
                border-color: #88d3ce;
                box-shadow: 0 0 0 0.25rem rgba(236, 136, 220, 0.25);
            }
            .btn-primary {
                background: #d406c3ff;
                border: none;
                border-radius: 10px;
                padding: 0.75rem 1.5rem;
                font-weight: bold;
                transition: all 0.3s ease;
            }
            .btn-primary:hover {
                background: #ff93f1ff;
                color: #333;
                transform: translateY(-2px);
            }
            .table {
                background: rgba(196, 117, 192, 0.9);
                color: #333;
                border-radius: 10px;
                overflow: hidden;
            }
            .table th, .table td {
                vertical-align: middle;
            }
            .table th {
                background: #d786f7ff;
                color: white;
                font-weight: bold;
            }
            .alert-success {
                background: #f076dbff;
                border: none;
                color: white;
                border-radius: 10px;
                font-weight: bold;
            }
        </style>
    {% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_servicio_nuevo') }}">Alta de Servicio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_servicio_nuevo') }}">Alta de Servicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_servicio_index') }}">Listado de Servicios</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <footer class="footer">
        &copy; {{ "now"|date("Y") }} Fotomascotas - Sistema Administrador
    </footer>

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</body>
</html>