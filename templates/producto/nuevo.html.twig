{# templates/producto/nuevo.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nuevo Producto - Fotomascotas CRUD{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #6e45e2, #88d3ce);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container {
            margin-top: 3rem;
            padding: 2rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        h1 {
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        .form-control {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid #6e45e2;
            border-radius: 10px;
            color: #333;
        }
        .form-control:focus {
            border-color: #88d3ce;
            box-shadow: 0 0 0 0.25rem rgba(106, 69, 226, 0.25);
        }
        .btn-primary {
            background: #6e45e2;
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background: #88d3ce;
            color: #333;
            transform: translateY(-2px);
        }
        .alert-success {
            background: #6e45e2;
            border: none;
            color: white;
            border-radius: 10px;
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mb-4">ðŸ“¸ Registrar Nuevo Producto</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.nombre, 'Nombre del producto', { 'label_attr': {'class': 'form-label'} }) }}
            {{ form_widget(form.nombre, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: Collar para perro'} }) }}
            {{ form_errors(form.nombre) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.precio, 'Precio (en pesos)', { 'label_attr': {'class': 'form-label'} }) }}
            {{ form_widget(form.precio, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: 15000'} }) }}
            {{ form_errors(form.precio) }}
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">ðŸ’¾ Guardar Producto</button>
        </div>
    {{ form_end(form) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-3">{{ message }}</div>
    {% endfor %}
</div>
{% endblock %}