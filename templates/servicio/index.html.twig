{% extends 'base.html.twig' %}

{% block title %}Listado de Servicios{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-center">Listado de Servicios</h1>

    <div class="text-end mb-3">
        <a href="{{ path('app_servicio_nuevo') }}" class="btn btn-success">‚ûï Nuevo Servicio</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Precio</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Categor√≠a</th>
                <th>Pagado</th>
                <th>Cantidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for servicio in servicios %}
            <tr>
                <td>{{ servicio.id }}</td>
                <td>{{ servicio.nombre }}</td>
                <td>{{ servicio.descripcion }}</td>
                <td>${{ servicio.precio }}</td>
                <td>{{ servicio.fecha ? servicio.fecha|date('d/m/Y') : '' }}</td>
                <td>{{ servicio.hora ? servicio.hora|date('H:i') : '' }}</td>
                <td>{{ servicio.categoria }}</td>
                <td>
                    {% if servicio.pagado %}
                        <span class="badge bg-success">S√≠</span>
                    {% else %}
                        <span class="badge bg-danger">No</span>
                    {% endif %}
                </td>
                <td>{{ servicio.cantidad }}</td>
                <td class="text-center">
                    <a href="{{ path('app_servicio_editar', {'id': servicio.id}) }}" class="btn btn-primary btn-sm">‚úèÔ∏è Editar</a>

                    <form method="post" action="{{ path('app_servicio_eliminar', {'id': servicio.id}) }}" style="display:inline-block" onsubmit="return confirm('¬øSeguro que deseas eliminar este servicio?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('eliminar' ~ servicio.id) }}">
                        <button class="btn btn-danger btn-sm">üóëÔ∏è Eliminar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10" class="text-center">No hay servicios registrados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
